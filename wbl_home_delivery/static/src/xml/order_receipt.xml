<templates>
    <t t-name="pos_order_type_receipt" t-inherit="point_of_sale.ReceiptHeader" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="after">
            <t t-if="this.env.services.pos.home_delivery_delivery_by">
                <div class="text-center mb-3">Delivery Info</div>
                <div class="row" t-if="this.env.services.pos.selectedOrder.partner.name">
                    <div class="col-3">
                        Name:
                    </div>
                    <div class="col-8">
                        <span t-esc="this.env.services.pos.selectedOrder.partner.name"/>
                    </div>
                </div>
                <div class="row" t-if="this.env.services.pos.selectedOrder.partner.phone">
                    <div class="col-3">
                        Mobile:
                    </div>
                    <div class="col-8">
                        <span t-esc="this.env.services.pos.selectedOrder.partner.phone"/>
                    </div>
                </div>
                <div class="row" t-if="this.env.services.pos.home_delivery_delivery_by">
                    <div class="col-4">
                        Deliver By:
                    </div>
                    <div class="col-6">
                        <span style="margin-left: -30px;" t-esc="this.env.services.pos.home_delivery_delivery_by"/>
                    </div>
                </div>
                <div class="row" t-if="this.env.services.pos.home_delivery_delivery_date">
                    <div class="col-3">
                        Date:
                    </div>
                    <div class="col-8">
                        <span t-esc="this.env.services.pos.home_delivery_delivery_date"/>
                    </div>
                </div>
                <div class="row" t-if="this.env.services.pos.home_delivery_timing">
                    <div class="col-3">
                        Slot:
                    </div>
                    <div class="col-8">
                        <span t-esc="this.env.services.pos.home_delivery_timing"/>
                    </div>
                </div>
                <div class="row" t-if="this.env.services.pos.selectedOrder.partner.zip">
                    <div class="col-3">
                        Address:
                    </div>
                    <div class="col-8">
                        <span t-if="this.env.services.pos.selectedOrder.partner.street"
                              t-esc="this.env.services.pos.selectedOrder.partner.street"/>
                        <span t-if="this.env.services.pos.selectedOrder.partner.city"
                              t-esc="this.env.services.pos.selectedOrder.partner.city"/>
                        <span t-esc="this.env.services.pos.selectedOrder.partner.zip"/>
                    </div>
                </div>
            </t>
        </xpath>
    </t>
</templates>

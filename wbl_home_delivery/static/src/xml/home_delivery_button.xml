<templates>
    <t t-name="product_screen_home_delivery_button" t-inherit="point_of_sale.OrderlineCustomerNoteButton"
       t-inherit-mode="extension">
        <xpath expr="//button[hasclass('fw-bolder')]" position="after">
            <button class="button js_invoice btn btn-light py-3 text-start rounded-0 border-bottom highlight change_color"
                    t-on-click="() => this.onClickHomeDeliveryButton()">
                <i class="fa fa-home" role="img" aria-label="POS  Free Stuff Program"
                   title="POS Free Stuff Program" style="margin-right: 5px; font-size:20px; "/>
                <span id="product_order_type" style="font-weight: bold;">
                    Home Delivery
                </span>
            </button>
        </xpath>
    </t>
</templates>


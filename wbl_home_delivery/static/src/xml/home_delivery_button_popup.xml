<templates id="home_delivery_template" xml:space="preserve">
    <t t-name="custom_popup.HomeDeliveryPopup" owl="1">
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"/>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"/>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"/>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js"
                type="text/javascript"/>
        <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.min.js"
                type="text/javascript"/>
        <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/themes/base/jquery-ui.css"
              rel="Stylesheet" type="text/css"/>
        <div class="popup custom_popup" id="custom_popup_modal">
            <div class="modal-header justify-content-center">
                <h2 class="modal-title">
                    Home Delivery Order
                </h2>
            </div>
            <div class="modal-body" style="height:480px;  overflow: scroll;">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab"
                       aria-controls="nav-home" aria-selected="true">ADDRESS</a>
                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab"
                       aria-controls="nav-profile" aria-selected="false">OTHER INFO</a>
                    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab"
                       aria-controls="nav-contact" aria-selected="false">DELIVERY INSTRUCTION</a>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                     aria-labelledby="nav-home-tab" style="text-align: left;">
                    <br/>
                    <input type="radio" id="old_address" class="old_address" name="address" value="old_address"
                           t-on-click="() => this.onClickAddress()" checked="true"/>
                    <label for="old_address" class="mx-1">By default shipped to selected customer address</label>
                    <br/>
                    <input type="radio" id="new_address" class="new_address" name="address" value="new_address"
                           t-on-click="() => this.onClickAddress()"/>
                    <label for="new_address" class="mx-1">Ship to different address</label>
                    <br/>
                    <input type="checkbox" id="address_data" name="address_data" value="False" style="display:none;"/>
                    <div class="default_information mt-3 container">
                        <div class="card" style="width: auto;padding: 10px;">
                            <div class="row ">
                                <div>
                                    <p t-if="this.pos.default_name" t-esc="this.pos.default_name"/>
                                    <p t-if="this.pos.default_email" t-esc="this.pos.default_email"
                                       style="margin-top : -18px;"/>
                                    <p t-if="this.pos.default_address" t-esc="this.pos.default_address"
                                       style="margin-top : -18px;"/>
                                    <div t-if="this.pos.default_phone" style="margin-top: -18px;">
                                        <span style="display: inline;">Phone</span>
                                        <p t-esc="this.pos.default_phone" class="mx-1"
                                           style="display: inline; margin: 0; padding: 0; line-height: 1.4;"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container mt-3 delivery-fields" style="display: none;">
                        <form>
                            <div class="form-group row">
                                <label for="delivery_name" class="col-sm-2 col-form-label">Name:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="delivery_name"
                                           placeholder="Enter name"
                                           name="delivery_name"/>
                                </div>
                            </div>
                            <div class="form-group row mt-3">
                                <label for="delivery_mobile" class="col-sm-2 col-form-label">Mobile:</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" id="delivery_mobile"
                                           placeholder="Enter mobile no." name="delivery_mobile"/>
                                </div>
                            </div>
                            <div class="form-group row mt-3">
                                <label for="delivery_email" class="col-sm-2 col-form-label">Email:</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" id="delivery_email"
                                           placeholder="Enter email"
                                           name="delivery_email"/>
                                </div>
                            </div>
                            <div class="form-group row mt-3">
                                <label for="delivery_locality" class="col-sm-2 col-form-label">Locality:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="delivery_locality"
                                           placeholder="Enter locality"
                                           name="delivery_locality"/>
                                </div>
                            </div>
                            <div class="form-group row mt-3">
                                <label for="delivery_street" class="col-sm-2 col-form-label">Street:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="delivery_street"
                                           placeholder="Enter email"
                                           name="delivery_street"/>
                                </div>
                            </div>
                            <div class="form-group row mt-3">
                                <label for="delivery_city" class="col-sm-2 col-form-label">City:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="delivery_city"
                                           placeholder="Enter email"
                                           name="delivery_city"/>
                                </div>
                            </div>
                            <div class="form-group row mt-3">
                                <label for="delivery_zip" class="col-sm-2 col-form-label">Zip:</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" id="delivery_zip"
                                           placeholder="Enter email"
                                           name="delivery_zip"/>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                    <div class="tab-pane fade" id="nav-profile" role="tabpanel"
                         aria-labelledby="nav-profile-tab">
                    <div class="container mt-3">
                        <form>
                            <h3 class="text-center">Other Information</h3>
                            <div class="form-group"
                                 style="text-align: left;">
                                <label for="delivery_person" class="col-form-label">Delivery Person:</label>
                                <div>
                                    <select id="delivery_person" name="delivery_person"
                                            t-on-focus="() => this.selectDeliveryPerson()">
                                        <option value="" id="select_a_delivery_person">Select a Delivery Person</option>
                                    </select>
                                    <span id="selected_option" style="display: none;"></span>
                                </div>
                            </div>
                            <t t-if="this.pos.delivery_person_id">
                                <div class="form-group row mt-3">
                                    <span class="col" style="text-align: left;">
                                        <label>
                                           Choose Date
                                        </label>
                                        <input id="wbl_delivery_dates" type="text" class="form-control"
                                               name="wbl_delivery_date" t-on-click="() => this._onCarrierClick()"/>
                                    </span>
                                    <span class="col">
                                          <t t-if="this.pos.selected_weekday and this.pos.delivery_time_slot ">
                                                <div class="form-group"
                                                     style="text-align: left;">
                                                    <label for="delivery_person_time">Choose Slot:</label>
                                                    <div>
                                                        <select id="delivery_person_time" name="delivery_person_time"
                                                                t-on-focus="() => this.selectDeliveryTiming()"
                                                                style="height: 28px;">
                                                                <option value="" id="slot_timing">Select a Slot</option>
                                                        </select>
                                                        <span id="selected_option_time" style="display: none;"/>
                                                    </div>
                                              </div>
                                          </t>
                                    </span>
                                </div>
                            </t>
                            <div class="form-group mt-4">
                                <textarea name="w3review" rows="5" cols="50"
                                          class="form-control" id="delivery_note"
                                          placeholder="Enter a delivery note"/>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="tab-pane fade" id="nav-contact" role="tabpanel"
                         aria-labelledby="nav-contact-tab">
                    <div class="container mt-3">
                        <form>
                            <h3 class="text-center">Delivery Instruction</h3>
                            <div class="form-group" style="text-align: left;">
                                <label for="delivery_person" class="col-form-label">Delivery Note:</label>
                                <div>
                                    <select id="delivery_instruction_note" name="delivery_instruction_note">
                                        <option value="Leave at Door">Leave at Door</option>
                                        <option value="Leave with Guard">Leave with Guard</option>
                                        <option value="Avoid Calling">Avoid Calling</option>
                                        <option value="Don't Ring the Bell">Don't Ring the Bell</option>
                                        <option value="Pet at Home">Pet at Home</option>
                                    </select>
                                </div>
                            </div>
                            <br/>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer footer-flex modal-footer justify-content-end">
                <div class="button cancel btn btn-lg btn-primary"
                     t-on-click="() = > this.onClickCreate()">
                    <span>Create</span>
                </div>
                <div class="button cancel btn btn-lg btn-primary"
                     t-on-click="() => this.onClickClear()">
                    <span>Clear</span>
                </div>
                <div class="button cancel btn btn-lg btn-primary"
                     t-on-click="() = > this.onClickCancel()">
                    <t t-esc="props.closePopup"/>
                </div>
        </div>
        </div>
    </t>
</templates>
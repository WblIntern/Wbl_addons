<odoo>
    <data>
        <record id="home_delivery_action_pos_pos_form" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="res_model">pos.order</field>
            <field name="view_mode">tree,form,kanban,pivot</field>
            <field name="view_id" eval="False"/>
            <field name="domain">[('is_home_delivery', '=', True)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No orders found
                </p>
                <p>
                    To record new orders, start a new session.
                </p>
            </field>
        </record>
        <menuitem id="pos_home_delivery"
                  name="Home Delivery"
                  parent="point_of_sale.menu_point_of_sale"
                  sequence="2"
                  action="home_delivery_action_pos_pos_form"/>
    </data>
</odoo>